<h1>Registered Schools</h1>
<% if signed_in? %>
  <%= link_to "Register a New Campus", new_school_url, class: 'btn btn-default' %>
<% end %>
<hr>
<% @schools.each do |school| %>
  <div class='col-md-offset-2 col-md-6'>
    <%= link_to school.name, school, class: 'btn btn-default' %>
  </div>
<% end %>
<div class = "col-md-offset-2 col-md-6">
<%= paginate @schools %>
</div>
